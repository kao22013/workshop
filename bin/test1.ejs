<!DOCTYPE html>
<html>
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <style>

      .header-bar{
        width: 100%;
        max-width: 100%;
        height: 128px;
        background: #D14E4B;

      }

      .img-center{
        text-align: center;
        display: flex;
        justify-content: center;
      }

      .center {
        margin: auto;
        width: 500px;
        border: 3px solid #73AD21;
        padding: 10px;
        background: #FFE2B7;

      }
      
      .size{
        width: 100%;
        max-width: 65%;
        height: 768px;
        max-height: 768px;
        background: #BBEFF5;

        margin: auto;
      
      }
      .row{
        display: flex;
      }
      .column{
        margin: 25px 10px 25px 10px;
        width: 20%;
        max-width: 45%;
        flex: 50%;
        padding: 10px;
        height: auto;
        border: 1px solid #000000;
        max-height: 300px;
        background: #FFBB2D;
      }


   </style>

  <!-- modl script -->

  <script>
    $(document).ready(function(){
            $('#myModal').modal('show');
    });
  </script>

</head>

<body>
<div class="header-bar" ">
    <div class="container" style="width:65%;">
        <div>
            <p style="font-size:42px;color: white;margin: 0px 10px 0px 0px;">TU-RL</p>
        </div>
        <div>
            <p style="font-size:18px;color: white;">REGISTERATION LATE.</p>
        </div>
    </div>
    

</div>

<div class="jumbotron text-center" style="width:100%;max-width:1200px;margin:auto;">
    <div class="row" style="width:100%;max-width:1200px; margin: auto;border: solid #000000;">

          <div class="column">
            <img src="https://reg.tu.ac.th/Picture/GetSitePopUp" alt="img" style="width:100%;max-width:100%; height:100%;max-height:100%;">
          </div>

          <div class="column" style="width:207px; max-width:25%;max-height:25%;">
            <div class"container" >
  
                <form action="/api">
	                <label for="text">Student ID:</label><br>
	                <input type="text" id="user" name="user" value="" style="width:200px;"><br>
	                <label for="text">Password:</label><br>
	                <input type="password" id="pwd" name="pwd" value=""><br><br>
	                <input type="submit" value="Submit">
	                <input type="reset" value="Reset">
                </form>

            </div>
          </div>

    </div>
</div>

<div class="size"></div>

<div class="container">
  
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog" >
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content" style="width:100%;max-width:800px;">
      <img src="https://reg.tu.ac.th/Picture/GetSitePopUp" alt="img" style="width:800px;max-width:100%; height:100%;max-height:100%;">

        <!--<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"></h4>
        </div>-->
        
        <!--<div class="modal-body">
          
          <p>Nothing.</p>
        </div >-->

        <div class="modal-footer" >
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

</div>

</body>
</html>